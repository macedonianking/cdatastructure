
config("compiler") {
  cflags = [
    "-Wall",
    "-Werror",
  ]
  cflags_c = [
    "-std=gnu99",
  ]
  cflags_cc = [
    "-std=c++0x",
  ]
  configs = []
}

config("static_library") {
  cflags = []
  configs = [ ":compiler" ]
}

