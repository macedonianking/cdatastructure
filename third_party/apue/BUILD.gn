
executable("apue") {
  sources = exec_script("//build/find_all_files_under.py",
                      [
                        "--include-patterns",
                        "*",
                        "--dir",
                        rebase_path("src", root_build_dir),
                        "--relative-dir",
                        rebase_path(".", root_build_dir),
                      ],
                      "list lines")
  include_dirs = [
    "src",
  ]

  deps = [
    "//third_party/cprog/utils:cprog_utils",
  ]
  libs = [ "pthread" ]
}

